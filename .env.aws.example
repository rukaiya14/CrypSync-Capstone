# AWS Production Environment Configuration

# Flask Configuration
SECRET_KEY=your-production-secret-key-here
FLASK_ENV=production

# AWS Configuration
AWS_REGION=us-east-1

# DynamoDB Tables (will be set by CloudFormation)
DYNAMODB_USERS_TABLE=crypsync-users-production
DYNAMODB_ALERTS_TABLE=crypsync-alerts-production
DYNAMODB_PRICES_TABLE=crypsync-prices-production

# CoinGecko API
COINGECKO_API_KEY=optional-api-key

# AWS SES Configuration
SES_SENDER_EMAIL=noreply@yourdomain.com
SES_REGION=us-east-1

# Application Configuration
MAX_PRICE_CACHE_AGE=60
ALERT_CHECK_INTERVAL=60
HISTORICAL_DATA_RETENTION_DAYS=90
